@{
    ViewBag.Title = "Movie Submission Page";
}

@model Assignment_3.Models.MovieResponse

<!--This form will gather the necessary information for each movie submission-->
<form asp-action="MovieForm" method="post">
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
    </div>

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
    </div>

    <!--Rating will use a drop-down menu-->
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="g">G</option>
            <option value="pg">PG</option>
            <option value="pg-13">PG-13</option>
            <option value="r">R</option>
        </select>
    </div>

    <!--Edited will also use a drop-down menu-->
    <div>
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" />
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
    </div>

    <!--The creation of the submit button as well as the necessary code to implement validation as found in the movie response view-->
    <button type="submit" value="Calculate" id="submitButton">Submit</button>
    <div asp-validation-summary="All"></div>

</form>